# Makefile for building the 'school' executable

# Compiler settings
CC := gcc
CFLAGS := -Wall -Wextra -pedantic

# Source files
SRC := main.c school.c

# Target: all (build the executable)
all: school

# Compile the source files into the 'school' executable
school: $(SRC)
	$(CC) $(CFLAGS) $^ -o $@

# Clean up generated files
clean:
	rm -f school

# Phony targets (not associated with files)
.PHONY: all clean
